<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.main.BlankFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<!--        <ImageView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="200dp"-->
<!--            android:id="@+id/scorerImageView"-->
<!--            android:src="@drawable/ic_account_circle_black_24dp"-->
<!--            android:scaleType="centerCrop"/>-->


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scorer's name"
            android:background="@color/primary_dark"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:text="Scorer's name"
                android:id="@+id/scorersNameTextView"
                android:layout_centerHorizontal="true"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textTextView"
                android:text="TEST"
                android:textColor="@color/colorWhite"
                android:layout_below="@id/scorersNameTextView"
                android:layout_centerHorizontal="true"/>


        </RelativeLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"

                    android:paddingLeft="20dp"
                    android:background="@color/colorWhite"
                    android:paddingTop="20dp"
                    android:paddingRight="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Firstname"
                        android:layout_marginLeft="90dp"
                        android:id="@+id/firstNameTextView"

                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View"
                        android:layout_marginLeft="90dp"

                        android:id="@+id/dateOfBirthTextView"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kenyan"
                        android:layout_marginLeft="90dp"
                        android:layout_marginBottom="10dp"

                        android:id="@+id/nationalityTextView"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Belgium"
                        android:id="@+id/countryBirthTextVIew"
                        android:textSize="15sp"
                        android:layout_marginLeft="90dp"

                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:id="@+id/shirtNumberTextView"
                        android:textSize="15sp"
                        android:layout_marginLeft="90dp"

                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:layout_marginLeft="90dp"

                        android:id="@+id/positionTextVIew"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/goalsTextViewNew"
                        android:text="10"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginLeft="90dp"
                        />
                </LinearLayout>


            </RelativeLayout>

        </ScrollView>


    </LinearLayout>

    <Spinner

        android:id="@+id/rateSpinnerRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true"
        android:layout_marginTop="175dp"
        android:entries="@array/rates"
        android:text="RATE"
        android:textColor="@color/colorWhite" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/savePlayerButton"
        android:layout_alignParentBottom="true"
        android:background="@drawable/roundedbutton"
        android:text="Add to favorites"
        android:textColor="@color/colorWhite"/>


</RelativeLayout>